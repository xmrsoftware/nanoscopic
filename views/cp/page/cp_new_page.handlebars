<h1>{{title}}</h1>
<p>
    <form action="/cp/page/create/" method="post">
        <label for="blog">Blog:</label><br/>
        <select name="blog">
            {{#each blogs}}
                <option value="{{blog_id}}">{{blog_title}}</option>
            {{/each}}
        </select><br/>
        <label for="title">Page Title:</label><br/>
        <input type="text" id="title" name="title"><br/>
        <label for="meta_desc">Meta Description:</label><br/>
        <textarea id="meta_desc" name="meta_desc"></textarea><br/>
        <label for="content">Page Content:</label><br/>
        <textarea id="content" name="content"></textarea><br/>
        <input type="submit" id="blog_page_submit" name="blog_page_submit" value="Create Blog Page">
    </form>
</p>